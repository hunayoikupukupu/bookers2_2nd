<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="row">
        <%= render 'info', user: @user %>
      </div>
      <div class="row">
        <%= render 'books/form', book: @book %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th style="width: 35%">image</th>
          <th style="width: 45%">name</th>
          <th></th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>