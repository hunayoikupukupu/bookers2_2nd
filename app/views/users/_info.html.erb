<div class="mt-3 w-100">
  <h2>User info</h2>
  <div><%= image_tag user.get_profile_image(100,100) %></div>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>

  <div class="pt-3">
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary w-100" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
</div>