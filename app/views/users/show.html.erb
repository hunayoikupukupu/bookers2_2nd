<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="row">
        <%= render 'info', user: @user %>
      </div>
      <div class="row">
        <%= render 'books/form', book: @book %>
      </div>
    </div>

    <div class="col-8 offset-1 mt-3">
      <h2>Books</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(80,80) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>