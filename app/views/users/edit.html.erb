<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h2 class="mt-3">User info</h2>

      <% if @user.errors.any? %>
        <%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <label>Name</label>
        <%= f.text_field :name, class:"form-control" %>
        <label class="mt-3">Image</label><br>
        <%= f.file_field :profile_image, placeholder:"ファイルを選択" ,accept:"image/*" %><br>
        <label class="mt-3">Introduction</label>
        <%= f.text_area :introduction, class:"form-control" %>
        <div><%= f.submit 'Update User', class: "btn btn-secondary text-light mt-3" %></div>
      <% end %>
    </div>
  </div>
</div>