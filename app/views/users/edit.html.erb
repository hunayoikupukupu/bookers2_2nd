<h1>User info</h1>

<% if @user.errors.any? %>
  <%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <h5>Name</h5>
  <%= f.text_field :name %>
  <h5>Image</h5>
  <%= f.file_field :profile_image, placeholder:"ファイルを選択" ,accept:"image/*" %>
  <h5>Introduction</h5>
  <%= f.text_area :introduction %>
  <div><%= f.submit 'Update User' %></div>
<% end %>
